generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Text {
  id        String     @id @default(uuid())
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  content   String
  author    String
  title     String
  sentences Sentence[]
}

model Sentence {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  textId    String
  content   String
  length    Int
  text      Text     @relation(fields: [textId], references: [id])
}

model Word {
  word  String @unique
  count Int    @default(0)
}
